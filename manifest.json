{
  "name": "How much BTC",
  "description": "Online converter for for EUR and USD in BTC",
  "version": "1.0.0",
  "manifest_version": 3,
  "permissions": [
    "storage",
    "alarms"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [ "http://*/*", "https://*/*" ],
      "run_at": "document_idle",
      "js": ["editor.js","converter.js", "content-script.js"]
    }
  ],
  "action": {
    "default_popup": "/iconmenu/main.html",
    "default_icon": {
      "16": "/images/hmbtc_logo16.png",
      "32": "/images/hmbtc_logo32.png",
      "48": "/images/hmbtc_logo48.png",
      "128": "/images/hmbtc_logo128.png"
    }
  },
  "icons": {
    "16": "/images/hmbtc_logo16.png",
    "32": "/images/hmbtc_logo32.png",
    "48": "/images/hmbtc_logo48.png",
    "128": "/images/hmbtc_logo128.png"
  }
}
